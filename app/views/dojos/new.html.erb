<h2>New Dojo</h2>

<%= error_messages_for :dojo %>

<% languages = Array.new( [ :JAVA, :C, "C++", "C#", :RUBY, :PHP ] ) %>

<% form_for @dojo do |f| %>
	<%= f.label :date %><br/>
	<%= f.datetime_select("date", :minute_step => 15) %><br/>
	<br/>
	<%= f.label :comment %><br/>
	<%= f.text_area :comment, :rows => 10 %><br/>
        <%= f.label :programming_language %><br/>
	<%= f.select :programming_language, languages %><br/>

  <br/>
  <%= f.label :block_list_date %><br/>
  <%= f.datetime_select :block_list_date, :minute_step => 15 %><br/>
  <br/>
	<%= f.submit 'Create' %>
<% end %>

<%= link_to 'Back', root_path %>
